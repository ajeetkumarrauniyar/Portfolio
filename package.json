{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "concurrently": "^9.1.2",
    "cra-template": "1.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.1",
    "react-router-dom": "^7.1.3",
    "react-scripts": "5.0.1",
    "react-tweet": "^3.2.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "server": "nodemon --watch server --experimental-json-modules server/index.js",
    "client": "PORT=3000 react-scripts start",
    "dev": "concurrently \"npm run server\" \"npm run client\" --prefix-colors \"yellow.bold,cyan.bold\" --names \"SERVER,CLIENT\"",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "nodemon": "^3.1.9",
    "postcss": "^8.4.21",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.3.0"
  },
  "engines": {
    "node": ">=18.0.0 <20.0.0"
  }
